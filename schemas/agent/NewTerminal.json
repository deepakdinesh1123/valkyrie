{
    "$defs": {
        "EnvironmentVariable": {
            "description": "Environment variable configuration",
            "properties": {
                "key": {
                    "description": "Environment variable name",
                    "title": "Key",
                    "type": "string"
                },
                "value": {
                    "description": "Environment variable value",
                    "title": "Value",
                    "type": "string"
                }
            },
            "required": [
                "key",
                "value"
            ],
            "title": "EnvironmentVariable",
            "type": "object"
        },
        "Shell": {
            "enum": [
                "nix",
                "bash",
                "sh",
                "nix-shell"
            ],
            "title": "Shell",
            "type": "string"
        }
    },
    "description": "Create a new terminal session",
    "properties": {
        "msgType": {
            "default": "NewTerminal",
            "title": "Msgtype",
            "type": "string"
        },
        "shell": {
            "$ref": "#/$defs/Shell",
            "description": "Shell type to use"
        },
        "nixShell": {
            "default": "",
            "description": "Nix shell configuration",
            "title": "Nixshell",
            "type": "string"
        },
        "nixFlake": {
            "default": "",
            "description": "Nix flake configuration",
            "title": "Nixflake",
            "type": "string"
        },
        "packages": {
            "description": "Packages to install",
            "items": {
                "type": "string"
            },
            "title": "Packages",
            "type": "array"
        },
        "env": {
            "description": "Environment variables to be added",
            "items": {
                "$ref": "#/$defs/EnvironmentVariable"
            },
            "title": "Env",
            "type": "array"
        }
    },
    "required": [
        "shell"
    ],
    "title": "NewTerminal",
    "type": "object"
}
